<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Registration">

    <EditText
        android:id="@+id/Rname"
        android:layout_width="347dp"
        android:layout_height="48dp"
        android:layout_marginTop="252dp"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="ENTER YOUR NAME"
        android:textColorHint="@color/text_input_hint_color"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/Rsection"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="SECTION"
        android:textColorHint="@color/text_input_hint_color"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rid"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/Rintake"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="INTAKE"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColorHint="@color/text_input_hint_color"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/Rid"
        app:layout_constraintTop_toBottomOf="@+id/Rname"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonRsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="SUBMIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RDept"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/RDept"
        android:layout_width="347dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="ENTER YOUR DEPARTMENT"
        android:textColorHint="@color/text_input_hint_color"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRDate"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/editTextRDate"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="PASS YEAR"
        android:textColorHint="@color/text_input_hint_color"
        android:inputType="date"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/Rsection"
        app:layout_constraintTop_toBottomOf="@+id/Rintake" />

    <EditText
        android:id="@+id/Rid"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="ENTER YOUR ID"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColorHint="@color/text_input_hint_color"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rname"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>