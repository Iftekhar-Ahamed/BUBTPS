<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/textView_selecttype"
        android:layout_width="131dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Select Type"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_bike"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Bike | Cycle"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_corner"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_selecttype" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_car"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_corner"
        android:text="Privet Car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_bike" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cancel"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_car" />
</androidx.constraintlayout.widget.ConstraintLayout>